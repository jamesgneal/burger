<h1>BURGERS</h1>

<h2>Burgers to eat:</h2>

<ul>
    {{#each burgers}} {{#unless devoured}} 
    <li>
	{{burger_name}}

	<button class="change-devour" data-id="{{id}}" data-newdevour="{{devoured}}">
		DEVOUR IT
	</button>

	{{!-- <button class="delete-burger" data-id="{{this.id}}">DELETE!</button> --}}
</li> 
    {{/unless}} {{/each}}
</ul>

<h2>Burgers I have devoured:</h2>

<ul>
    {{#each burgers}} {{#if devoured}}
    <li>
        {{burger_name}}
    </li>
    {{/if}} {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ba">Burger Name:</label>
        <input type="text" id="ba" name="name">
    </div>

    <button type="submit">Add Burger</button>
</form>